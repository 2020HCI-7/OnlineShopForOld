<view class="main">
    <button wx:if="{{!hasUserInfo && canIUse}}" 
        open-type="getUserInfo" 
        bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <view wx:else class="header">
        <image src="{{userInfo.avatarUrl}}" class="thumb"></image>
        <text class="nickname">{{userInfo.nickName}}</text>
        <text class="about">关于我们</text>
    </view>
    <view class="coupon-box">
        <view class="coupon-manage">
            <navigator url="../coupon/coupon">优惠券管理</navigator>
        </view>
    </view>
    <view class="address-box">
        <view class="address-manage">
            <navigator url="../address/address">地址管理</navigator>
        </view>
        <view wx:if="{{hasAddress}}" class="address-list">
            <view>
                {{addressToString}}
            </view>
        </view>
    </view>
    <view class="orders-box">
        <view class="orders">我的订单</view>
        <button class="broadcast-button" bind:tap="bindTapBroadcast" type="primary">
            <text >播报订单</text>
        </button>
        <view class="orders-list" wx:for="{{orders}}" wx:key="index">
            <view class="orders-number">订单编号：{{item.number}}</view>
            <view class="orders-detail">
                <image src="{{item.thumb}}"></image>
                <view class="">{{item.name}}</view>
                <view class="">{{item.count}}</view>
                <text class="orders-status">{{item.status}}</text>
            </view>
            <view class="orders-footer">
                <block wx:if="{{item.showPay}}">
                    <text>实付：￥{{item.money}}</text>
                    <button size="mini" class="orders-btn" bindtap="payOrders">付款</button>
                </block>
                <block wx:else>
                    <text>物流信息：{{item.logistics}}</text>
                </block>
            </view>
        </view>
    </view>
</view>