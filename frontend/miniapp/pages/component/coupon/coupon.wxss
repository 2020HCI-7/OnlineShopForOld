/* pages/component/coupon/coupon.wxss */

.coupons-box{
    color: #999;
    font-size: 28rpx;
}
.coupons{
    height: 90rpx;
    line-height: 90rpx;
    font-size: 48rpx;
    border-bottom: 1rpx solid #e9e9e9;
    text-align: center;
}
.coupons-list{
    padding-left: 30rpx;
    border-bottom: 20rpx solid #ededed;
}
.coupons-list:last-child{
    border-bottom: 0;
}
.coupons-number{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.coupons-detail{
    position: relative;
    height: 120rpx;
    padding: 35rpx 20rpx 35rpx 170rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.coupons-detail image{
    position: absolute;
    left: 0;
    top: 20rpx;
    width: 150rpx;
    height: 150rpx;
}
.coupons-detail view{
    line-height: 60rpx;
}
.coupons-detail .coupons-describe{
    position: absolute;
    right: 20rpx;
    top: 35rpx;
    height: 120rpx;
    line-height: 120rpx;
    color: #b42f2d;
}
.coupons-footer{
    height: 60rpx;
    line-height: 60rpx;
    color: #2f2f2f;
    padding:15rpx 30rpx 15rpx 0;
}